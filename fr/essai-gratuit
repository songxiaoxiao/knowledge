  // make an array of invalid domains
 var invalidDomains = ['gmail.com', 'yahoo.co.in' , 'abc.com', 'yahoo.com', 'hotmail.com', 'mail.com', 'live.com', 'aol.com', 'outlook.com', 'competitor.com', 'xyz.com', 'pqr.com', 'rediffmail.com', 'live.com', 'me.com', 'msn.com', 'ymail.com'];
 var submitBtn = $('#submit-trial-fr');
  
 submitBtn.click(()=>{
    const email = $('#trial-fr-email');
    const domainPart = email.val().split('@')[1]; 
  
    if(invalidDomains.indexOf(domainPart) !== -1) {
			email.val('');
      email.attr('placeholder','Ce n\'est pas un email professionnel'); 
      return false;
    }
    else{	
      return true;
    }
  });
});

